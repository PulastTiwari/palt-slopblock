{
  "manifest_version": 3,
  "name": "Palt | Slopblock",
  "version": "0.1.0",
  "description": "See more signal and less noise on LinkedIn. Automatically collapse engagement style posts with full privacy.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background/serviceWorker.js"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
